<% include ./partials/header.ejs %>
 <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xs ">Create a New Post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/add" method="post" enctype="multipart/form-data">
        <input class="block  w-1/3 px-3 py-2 " type="file" name="postimage">
        <input class="block text-black w-1/3 px-3 py-2 border-2 mt-3 rounded-md" type="text" placeholder="Title" name="title"> 
        <textarea class="block text-black w-1/3 px-3 py-2 border-2 mt-3 rounded-md" type="text" placeholder="imageText" name="filecaption"></textarea>
        <input class="block  w-1/3 px-3 py-2 border-2 mt-3 bg-red-500 rounded-md" type="submit" value="Create A New Post">
    </form>
 </div>
