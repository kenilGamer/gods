<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-700 px-10 py-8 text-white">
        <div class="cards flex flex-wrap gap-10 ">
            <% posts.forEach(function(elem){ %>
                <div class="card w-38">
                    <h2 class="mt-2 text-sm mx-20">@<%= elem.user.username %></h2>
                    <div class=" w-full h-44 bg-zinc-500 rounded-lg overflow-hidden">
                        <img src="/images/uploads/<%= elem.image %>" class="w-full h-full object-cover" alt="">
                    </div>
                    <h2 class="mt-2 text-sm border-2" style="text-align: center;"><%= elem.title %></h2>

                    <h5 class="mt-2 text-sm w-[24vw] text-sm border-2" style="text-align: center;"><%= elem.imageText %></h5>
                </div>    
           <% }) %>
        </div>
    </div>
<% include ./partials/footer.ejs %>
