<% include ./partials/header.ejs %>
    <div class="w-[100%] min-h-screen bg-zinc-700 px-10 py-8 text-white">
        <div class="cards flex flex-wrap  gap-10 ">
            <% user.posts.forEach(function(elem){ %>
                <div class="card w-38 gap-10 mx-1">
                    <h2 class="mt-2 text-sm " style="text-align:center;"><%= elem.title %></h2>

                    <div class=" w-full h-44 bg-sky-200 rounded-lg overflow-hidden">
                        <img src="/images/uploads/<%= elem.image %>" class="w-full h-full object-cover" alt="">
                    </div>
                    <h5 class="mt-2 text-sm w-72  flex flex-wrap" style="text-align:center;"><%= elem.imageText %></h5>
                    <a href="/delete/posts">dagh</a>
                </div>    
           <% }) %>
        </div>
    </div>
<% include ./partials/footer.ejs %>
