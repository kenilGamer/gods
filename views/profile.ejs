<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form action="/file" method="post" id="uplogo" enctype="multipart/form-data" hidden>
            <input type="file" name="image" id="">
        </form>
        <div class="profdets flex flex-col items-center mt-20 ">
            <div class="relative">
                <span id="logo" class="w-6 h-6 absolute bottom-0 right-2 rounded-full flex items-center justify-center  bg-zinc-200">
                    <i class="ri-pencil-fill text-zinc-700"></i>
                </span>
                <div class="w-28 h-28 bg-blue-100 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileimage %>" alt="">   
                </div>
            </div>
            <h1 class="text-3xl mt-3 font-semibold "><%= user.fullname %></h1>
            <h2>@<%= user.user %></h2>
            <a href="/edit" class="px-5 mt-3 py-3 bg-blue-300 rounded-full">Edit</a> 
            <a href="/add" class="px-10 py-2 rounded-lg bg-red-600 text-xs font-semibold mt-3">Add New Post</a>   
        </div>
        <div class="cards flex flex-wrap gep-10 px-10 mt-10">
            <div>
                <div class="w-52 h-40 bg-red-400 rounded-lg ">
                    <img class="w-full h-full object-cover"  src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
                </div>
                <a href="/show/posts" class="inline-block mt-5 text-lg">all pins</a>
                <h5 class="text-sm"><%= user.posts.length %> pings   </h5>
                
            </div>
        </div>
    </div>
    <script>
        document.querySelector("#logo").addEventListener("click", function () {
            document.querySelector("#uplogo input").click();
        })
        document.querySelector("#uplogo input").addEventListener("change", function  (){
            document.querySelector("#uplogo").submit();
        })
    </script>
<% include ./partials/footer.ejs %>
